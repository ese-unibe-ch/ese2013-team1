<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#ffff4444"
                android:centerColor="#ffff4f4f"
                android:endColor="#ffff4444" />

            <stroke
                android:width="2dp"
                android:color="#ffde0000" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>
