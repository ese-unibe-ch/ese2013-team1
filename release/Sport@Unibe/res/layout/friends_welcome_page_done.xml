<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friends_welcome_page_nickname_bg" >

    <TextView
        android:id="@+id/congratulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#bbffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#ff222222"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Congratulations!" />
    
    <TextView
        android:id="@+id/username_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/congratulations"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#bbffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#ff222222"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Now you can use all social features! You also can specify your actual name, to help your friends find you:" />

  <LinearLayout
        android:id="@+id/account_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_layout_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:hint="nickname"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="#ff222222"
            android:textColorHint="#66222222"
            android:textStyle="bold" />



    </LinearLayout>
    
        <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:minWidth="100dp"
        android:layout_alignRight="@+id/account_login_container"
        android:layout_below="@+id/account_login_container"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_button_bg"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Start using"
        android:textColor="#ff222222"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/account_login_container"
        android:layout_centerHorizontal="true"
        android:minHeight="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/indicator_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/page_indicator_disabled" />

        <ImageView
            android:id="@+id/indicator_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/page_indicator_enabled" />
    </LinearLayout>

</RelativeLayout>
