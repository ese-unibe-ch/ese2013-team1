<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/appear_in_instant</item>
        <item name="android:activityOpenExitAnimation">@anim/appear_out_instant</item>
        <item name="android:activityCloseEnterAnimation">@anim/appear_out_instant</item>
        <item name="android:activityCloseExitAnimation">@anim/appear_in_instant</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Unisport" parent="@style/Theme.Sherlock.Light">
        <item name="android:icon">@drawable/unisport_logo</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="Theme.Unisport.Main" parent="@style/Theme.Sherlock.Light"></style>

    <style name="Theme.Unisport.Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/card_layout_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogFloating" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>