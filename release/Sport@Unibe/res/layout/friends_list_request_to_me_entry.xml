<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/name"
        android:layout_alignTop="@+id/name"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/no_avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/cancel_request"
        android:layout_toRightOf="@+id/picture"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/cancel_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignTop="@+id/name"
        android:layout_toStartOf="@+id/divider"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:background="@drawable/course_info_link_bg" />

    <View
        android:id="@+id/divider"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignTop="@+id/name"
        android:layout_toStartOf="@+id/accept_request"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#66222222" />
    
    <ToggleButton
        android:id="@+id/accept_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/name"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:background="@drawable/course_info_link_bg" />

</RelativeLayout>